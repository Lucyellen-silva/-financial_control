<form method="post" action="{{ action }}">
	<div class="form-group">
		<labe class="control-label">Primeiro nome</label>
		<input class="form-control" type="text" name="first_name" placeholder="Primeiro nome" value="{{ user.first_name }}">
	</div>
	<div class="form-group">
		<labe class="control-label">Último nome</label>
		<input class="form-control" type="text" name="last_name" placeholder="Último nome" value="{{ user.last_name }}">
	</div>
	<div class="form-group">
		<labe class="control-label">E-mail</label>
		<input class="form-control" type="text" name="email" placeholder="email" value="{{ user.email }}">
	</div>
	<div class="form-group">
		<labe class="control-label">Password</label>
		<input class="form-control" type="password" name="password" placeholder="Password" value="{{ user.password }}">
	</div>
	<button type="submit" class="btn btn-primary btn-block">
		<span class="glyphicon glyphicon-{{ submitIcon }}"></span>
	</button>
</form>